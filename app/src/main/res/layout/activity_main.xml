<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editTextFirstVariable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input One"
        android:inputType="number"
        android:background="@drawable/rectangle"
        android:padding="7dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/editTextSecondVariable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Input Two"
        android:inputType="number"
        android:background="@drawable/rectangle"
        android:layout_alignParentRight="true"
        android:padding="7dp"
        android:layout_margin="10dp"/>


    <Button
    android:id="@+id/buttonAddition"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Addition"
    android:padding="7dp"
    android:layout_margin="10dp"
    android:layout_below="@id/editTextFirstVariable"/>

    <Button
        android:id="@+id/buttonSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtraction"
        android:padding="7dp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editTextFirstVariable"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        
        <TextView
            android:id="@+id/textViewInputOne"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewInputTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text=""
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/textViewResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:text=""
            android:textColor="#000000"/>
    </LinearLayout>
</RelativeLayout>